 <%@products.each do |product|%>
<div class="center">

    <div class="col s12 m7">
      <div class="card">
        <div class="center">
          <img style="width:100px; height:auto">
                <%=image_tag(product.image, style:'width:15%')%>
                <br><br>
          <span class="card-title"><strong><%=product.name %></strong> $<%=product.price %></span>

        <%product.categories.each do |cat|%>
        <%=cat.name%>
          <%end%>


        </div>
        <div class="btn-floating btn-small pulse pink">
         <a href="<%=user_product_path(current_user, product)%>"> <i class="material-icons">zoom_in</i> </a>
        
        </div>
        <div class="card-content">
         <p><%=product.user.username %></p>
        </div>
      </div>
    </div>
  </div>
    
<%end%>

<p>
  <%=link_to 'Display new product', new_user_product_path%>
</p>



